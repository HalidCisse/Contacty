extends ../layout

block content
    h1.
        Blob ID #{contact._id}
    form(action='/contacts/#{contact._id}/edit',method='post',name='updateContact',enctype='application/x-www-form-urlencoded')
        p Name:
            input#inputName(type='text', value='#{contact.name}', name='name')
        p Badge:
            input#inputBadge(type='number', value='#{contact.badge}', name='badge')
        p DOB:
            input#inputDob(type='date', value='#{contactdob}', name='dob')
        p
            input(type='hidden',value='PUT',name='_method')
        p
            button#btnSubmit(type='submit').
                Update